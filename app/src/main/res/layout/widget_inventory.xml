<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#CC000000"
    android:clipToOutline="true"
    android:elevation="4dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Fila superior: Logo + título + icono ojo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Logo -->
        <ImageView
            android:id="@+id/widget_logo"
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:contentDescription="@string/logo_inventory"
            android:src="@drawable/ic_logo_widget" />

        <!-- Contenedor derecho con texto + icono de ojo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="end"
                android:text="@string/cuanto_tengo_de_inventario"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/widget_eye_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/ver_saldo"
                android:src="@drawable/ic_eye_open"
                app:tint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Texto inferior debajo del logo -->

    <!-- Zona de saldo (alineado a la derecha) -->

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/inventory"
        android:textColor="#e7522e"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/widget_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:text="$ ****"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <!-- Línea inferior: texto “Gestionar inventario” + ícono -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_manage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gestionar_inventario"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/widget_manage_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_manage"
            app:tint="@color/orange" />
    </LinearLayout>
</LinearLayout>
