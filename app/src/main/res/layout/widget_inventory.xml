<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CC000000"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:gravity="center_vertical"
    android:clipToOutline="true"
    android:elevation="4dp">

    <!-- Fila superior: Logo + título + icono ojo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">

        <!-- Logo -->
        <ImageView
            android:id="@+id/widget_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/logo_inventory"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

        <!-- Texto superior derecha -->
        <TextView
            android:id="@+id/widget_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cuanto_tengo_de_inventario"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical" />

        <!-- Ícono de ojo -->
        <ImageView
            android:id="@+id/widget_eye_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_eye_open"
            android:contentDescription="@string/ver_saldo"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical|end"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Texto inferior debajo del logo -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inventory"
        android:textColor="#e7522e"
        android:textSize="18sp"
        android:layout_marginTop="4dp" />

    <!-- Zona de saldo -->

    <!-- Línea inferior: texto “Gestionar inventario” + ícono -->
    <TextView
        android:id="@+id/widget_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:text="@string/cuanto"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical">

        <TextView
            android:id="@+id/widget_manage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gestionar_inventario"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/widget_manage_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_manage"
            android:layout_marginStart="6dp"
            app:tint="@color/orange" />
    </LinearLayout>
</LinearLayout>